{
  "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "build",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "types": [
          "mocha",
          "node",
          "chai",
          "sinon"
      ],
  },
  "include": [
      "src/**/*.ts",
      "test/**/*.spec.ts",
  ],
  "exclude": [
      "node_modules",
      "test/**/*.spec.ts"
  ]
}
